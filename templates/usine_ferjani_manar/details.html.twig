{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ title }}</h1>
    {% if usine is not null %}
    
    <p><b>nom : </b> {{ usine.nom}} </p>
    <div>
    <p><b>nbrTotal : </b> {{ usine.nbrTotal}} </p>
    <p>Date de production : {{ usine.dateProduction|date('d/m/Y') }}</p>

    </div><hr>
    {% else %}
    <p>usine not found.</p>
    {% endif %}
    <a href="{{ path('app_usine_list') }}">Back to usines List</a>
</div>
{% endblock %}